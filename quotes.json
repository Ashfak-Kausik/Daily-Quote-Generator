import random
import json

# Load quotes from JSON file
with open('quotes.json', 'r', encoding='utf-8') as file:
    data = json.load(file)
    quotes = data['quotes']

# Select a random quote
quote_data = random.choice(quotes)
quote = quote_data['text']
author = quote_data['author']

# Display the quote
print("=" * 50)
print("ðŸ“– DAILY QUOTE")
print("=" * 50)
print(f"\"{quote}\"")
print(f"\n- {author}")
print("=" * 50)